			@model Doctor

<h1 class="alert alert-primary text-center">Create Doctor</h1>

<form method="post" asp-controller="Doctors" asp-action="AddNew" class="col-4"
	  enctype="multipart/form-data">
	<div asp-validation-summary="All" class="text-danger"></div>
	<div>
		<label asp-for="FullName" class="form-label"></label>
		<input type="text" asp-for="FullName" class="form-control" />
		<span asp-validation-for=FullName class="text-danger"></span>
	</div>
	<div>
		<label asp-for="NationalId" class="form-label"></label>
		<input type="text" asp-for="NationalId" class="form-control" />
		<span asp-validation-for=NationalId class="text-danger"></span>
	</div>
	<div>

		<lable asp-for="MedicalSpecialtyId" class="form-label"> Specialty</lable>

		<select class=" form-control"
				asp-for="MedicalSpecialtyId"
				asp-items="@(new SelectList(ViewBag.AllSpecialties,"Id", "Name"))">
			<option selected disabled value="0">Select Specialty ...</option>
		</select>

		<span asp-validation-for=MedicalSpecialtyId class="text-danger"></span>
	</div>

	<div>
		<label asp-for="Position" class="form-label"></label>
		<input type="text" asp-for="Position" class="form-control" />
		<span asp-validation-for=Position class="text-danger"></span>
	</div>
	<div>
		<label asp-for="HiringDate" class="form-label"></label>
		<input type="date" asp-for="HiringDate" class="form-control" />
		<span asp-validation-for=HiringDate class="text-danger"></span>
	</div>

	<div>
		<label asp-for="AttendenceTime" class="form-label"></label>
		<input type="time" asp-for="AttendenceTime" class="form-control" />
		<span asp-validation-for=AttendenceTime class="text-danger"></span>
	</div>

	<div>
		<label asp-for="PhoneNumber" class="form-label"></label>
		<input type="text" asp-for="PhoneNumber" class="form-control" />
		<span asp-validation-for=PhoneNumber class="text-danger"></span>
	</div>

	<div>
		<label asp-for="EmailAddress" class="form-label"></label>
		<input type="email" asp-for="EmailAddress" class="form-control" />
		<span asp-validation-for=EmailAddress class="text-danger"></span>
	</div>

	<div>
		<label asp-for="ConfirmEmail" class="form-label"></label>
		<input type="email" asp-for="ConfirmEmail" class="form-control" />
		<span asp-validation-for=ConfirmEmail class="text-danger"></span>
	</div>
	<div>
		<label asp-for="Password" class="form-label"></label>
		<input asp-for="Password" class="form-control" />
		<span asp-validation-for=Password class="text-danger"></span>
	</div>

	<div>
		<label asp-for="ConfirmPassword" class="form-label"></label>
		<input type="password" asp-for="ConfirmPassword" class="form-control" />
		<span asp-validation-for=ConfirmPassword class="text-danger"></span>
	</div>
	<div>
		<label asp-for="IsActive" class="form-label"></label>
		<input type="checkbox" asp-for="IsActive" />
		<span asp-validation-for=IsActive class="text-danger"></span>

	</div>
	<div>
		<label asp-for="Bio" class="form-label"></label>
		<input type="text" asp-for="Bio" class="form-control" />
	</div>
	<div>
		<label asp-for="ImageFIle" class="form-label"></label>
		<input type="file" name="imageFile" id="imageFile"
			   accept=".png,.jpg" class="form-control" />
	</div>

	<div>
		<button type="submit" class=" btn btn-secondary mt-2 ml-1 col-5">Add</button>
		<button type="reset" class=" btn btn-secondary mt-2 col-5">Reset</button>
		<a asp-controller="Doctors" asp-action="GetIndexView" class="btn btn-primary col-10 mt-1">Back to List</a>
	</div>


</form>